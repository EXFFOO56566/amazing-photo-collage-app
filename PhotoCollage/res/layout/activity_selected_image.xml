<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context="com.karma.photocollage.SelectedImageActivity" >

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="2" >

        <ImageButton
            android:id="@+id/iv_btn_picture"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="3dp"
            android:background="@drawable/mi_interest_selector" />

        <ImageView
            android:id="@+id/iv_btn_camera"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="3dp"
            android:background="@android:color/transparent"
            android:src="@drawable/camera" />

        <ImageView
            android:id="@+id/iv_btn_share"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="3dp"
            android:background="@android:color/transparent"
            android:src="@drawable/share" />

        <ImageView
            android:id="@+id/iv_btn_save"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="3dp"
            android:background="@android:color/transparent"
            android:src="@drawable/download" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ll2"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll3"
        android:layout_below="@+id/ll1"
        android:background="@android:color/white"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <!--
                 <AbsoluteLayout
                android:id="@+id/rr_1"
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:layout_weight="0.5" >

                <com.example.photocollage.TouchImageView
                    android:id="@+id/iv_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                
                     <ImageView
                    android:id="@+id/iv_1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                     android:layout_gravity="center" />
               
            </AbsoluteLayout>
            -->

            <FrameLayout
                android:id="@+id/rr_1"
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:layout_weight="0.5" >

                <ImageView
                    android:id="@+id/iv_1"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:scaleType="matrix" >
                </ImageView>
                
                
            </FrameLayout>

            
            
            
            
               <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:layout_weight="0.5" >

                <ImageView
                    android:id="@+id/iv_2"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:scaleType="matrix" >
                </ImageView>
                
                
            </FrameLayout>
           <!--  <AbsoluteLayout
                android:id="@+id/rr_2"
                android:layout_width="match_parent"
                android:layout_height="30dip"
                android:layout_weight="0.5" >

                <com.example.photocollage.TouchImageView2
                    android:id="@+id/iv_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                
                     <ImageView
                    android:id="@+id/iv_2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                     android:layout_gravity="center" />
               
            </AbsoluteLayout> -->
        </LinearLayout>

        <ImageView
            android:id="@+id/main_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_rotate_left"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="3dp"
            android:background="@android:color/transparent"
            android:src="@drawable/left_rotate" />

        <ImageView
            android:id="@+id/iv_rotate_right"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="3dp"
            android:background="@android:color/transparent"
            android:src="@drawable/right_rotate" />
    </LinearLayout>

</RelativeLayout>